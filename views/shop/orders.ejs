<%-include('../EJS/head.ejs')%>
<link rel="stylesheet" href="/public/css/order.css">

<%-include('../EJS/navigation.ejs')%>
<main>
    <% if (orders.length <= 0) { %>
        <h1>Nothing there!</h1>
    <% } else { %>
        <ul class="orders">
            <% orders.forEach(order => { %>
                <li class="orders__item">
                    <h1>Order - # <%= order._id %><a href="/order/<%=order._id%>">INVOICE</a></h1>
                    <ul class="orders__products">
                        <% order.products.forEach(product => { %>
                            <li class="orders__products-item"><%=product.product.title %> (<%= product.quantity %>)</li>
                        <% }); %>
                    </ul>
                </li>
            <% }); %>
        </ul>
    <% } %>
</main>
 <%-include('../EJS/end.ejs')%>